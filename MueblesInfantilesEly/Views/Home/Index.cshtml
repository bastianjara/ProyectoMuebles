                <h3 class="section-subheading text-muted">Para ver mas imagenes, debe hacer click sobre una categoria.</h3>
            </div>
            <div class="row">
                @{

                    try
                    {



                        @using System.IO;

                        @using System.IO;
                        string path = $"{Directory.GetCurrentDirectory()}{@"\wwwroot\Imagenes\Muebles\Index\"}";
                        DirectoryInfo d = new DirectoryInfo(path);//Assuming Test is your Folder
                        FileInfo[] Files = d.GetFiles("*.jp*"); //Getting Text files
                        foreach (FileInfo file in Files)
                        {
                            <div class="col-lg-3 col-sm-6 mb-4">
                                <a href="/Portafolio/@file.Name.Split('.')[0]">

                                    <div class="portfolio-item" style="cursor:pointer">
                                        <img class="img-fluid" src="~/Imagenes/Muebles/Index/@file.Name" style="height:330px !important; width:500px !important" />
                                        <div class="portfolio-caption" style="height: 150px;">
                                            <div class="portfolio-caption-heading">@file.Name.Split('.')[0].Replace("_", " ")</div>
                                            @*<div class="portfolio-caption-subheading text-muted">Illustration</div>*@
                                        </div>
                                    </div>
                                </a>
                            </div>

                        }
                    }
                    catch (Exception ex)
                    {
                        WriteLiteral(ex);

                    }

                }
            </div>
        </div>
    </section>
